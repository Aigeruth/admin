{{ $paginationResult := pagination }}
{{ if $paginationResult }}
  <nav class="qor-pagination-container">
    <ul class="qor-pagination" style="margin-right: 10px;">
      {{range $index, $page := $paginationResult.Pages}}
        {{if $page.IsPrevious}}
          <li class="qor-pagination-item qor-pagination-previous">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "qor_admin.pagination.previous" "Previous Page"}}" aria-label="{{t "qor_admin.pagination.previous"}}">&lsaquo;</a>
          </li>
        {{else if $page.IsNext}}
          <li class="qor-pagination-item qor-pagination-next">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "qor_admin.pagination.next" "Next Page"}}" aria-label="{{t "qor_admin.pagination.next"}}">&rsaquo;</a>
          </li>
        {{else if $page.IsFirst }}
          <li class="qor-pagination-item qor-pagination-next">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "qor_admin.pagination.first" "First Page"}}" aria-label="{{t "qor_admin.pagination.first"}}">&laquo;</a>
          </li>
        {{else if $page.IsLast }}
          <li class="qor-pagination-item qor-pagination-next">
            <a href="{{patch_current_url "page" $page.Page}}" title="{{t "qor_admin.pagination.alst" "Last Page"}}" aria-label="{{t "qor_admin.pagination.last"}}">&raquo;</a>
          </li>
        {{else if $page.Current}}
          <li class="qor-pagination-item active"><a href="{{patch_current_url "page" $page.Page}}">{{$page.Page}}</a></li>
        {{else}}
          <li class="qor-pagination-item"><a href="{{patch_current_url "page" $page.Page}}">{{$page.Page}}</a></li>
        {{end}}
      {{end}}
    </ul>
    <div data-toggle="qor.filter">
      {{ if eq -1 $paginationResult.Pagination.PerPage }}
        <select class="qor-action--select" data-toggle="qor.selector" data-clearable="true" name="per_page" placeholder="{{t "qor_admin.pagination.show_all" "Show All"}}">
      {{ else }}
        <select class="qor-action--select" data-toggle="qor.selector" data-clearable="true" name="per_page" placeholder="{{$paginationResult.Pagination.PerPage}}">
      {{ end }}
        <option value="20">20</option>
        <option value="50">50</option>
        <option value="100">100</option>
        <option value="-1">{{t "qor_admin.pagination.show_all" "Show All"}}</option>
      </select>
    </div>
  </nav>
{{ end }}
